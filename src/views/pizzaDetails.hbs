<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/styles.css" />
    <title>Pizza Details</title>
  </head>
  <body>
    <div class="pizzaDetails">
      <h1>Speciality Pizza: {{pizza.name}}</h1>
      <table>
        <thead>
          <tr>
            <td>Name:</td>
            <td class="pizzaName">{{pizza.name}}</td>
          </tr>
          <tr>
            <td>Price:</td>
            <td class="pizzaPrice">${{pizza.price}}</td>
          </tr>
        </thead>
      </table>
      <div class="backHome">
        <a class="backToHome" href="/back-to-homepage">Back to Homepage</a>
      </div>
    </div>
  </body>
</html>